<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.dubedout.devicecounter.activity.RegisterDeviceActivity">

    <!--device label-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_register_device_wrapper_device_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <EditText
            android:id="@+id/activity_register_device_device_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="@string/register_new_label"
            android:nextFocusDown="@+id/activity_register_device_device_model"
            android:nextFocusUp="@+id/activity_register_device_device_label"
            />
    </android.support.design.widget.TextInputLayout>

    <!--device model-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_register_device_wrapper_device_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_register_device_wrapper_device_label"
        >
        <EditText
            android:id="@+id/activity_register_device_device_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="@string/register_new_model"
            android:nextFocusDown="@+id/activity_register_device_button_send"
            android:nextFocusUp="@id/activity_register_device_device_label"
            />
    </android.support.design.widget.TextInputLayout>

    <!--ok button-->
    <Button
        android:id="@+id/activity_register_device_button_send"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_register_device_wrapper_device_model"
        android:layout_centerHorizontal="true"
        android:nextFocusDown="@id/activity_register_device_button_send"
        android:nextFocusUp="@id/activity_register_device_device_model"
        android:text="@android:string/ok"/>

</RelativeLayout>
