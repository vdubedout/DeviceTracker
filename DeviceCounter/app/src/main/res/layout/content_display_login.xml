<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.LoginActivity"
    tools:showIn="@layout/activity_login">

    <!--User name-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_login_username_wraper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <EditText
            android:id="@+id/activity_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="@string/login_username"
            android:nextFocusDown="@+id/activity_register_device_model"
            android:nextFocusUp="@+id/activity_register_device_label"
            />
    </android.support.design.widget.TextInputLayout>

    <!--device model-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_login_password_wraper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_username_wraper"
        >
        <EditText
            android:id="@+id/activity_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="@string/login_password"
            android:nextFocusDown="@+id/activity_register_device_button_send"
            android:nextFocusUp="@id/activity_register_device_label"
            />
    </android.support.design.widget.TextInputLayout>

    <!--ok button-->
    <Button
        android:id="@+id/activity_login_button_send"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_password_wraper"
        android:layout_centerHorizontal="true"
        android:nextFocusDown="@id/activity_login_button_send"
        android:nextFocusUp="@id/activity_login_username"
        android:text="@string/button_login"
        android:enabled="false"/>

</RelativeLayout>
